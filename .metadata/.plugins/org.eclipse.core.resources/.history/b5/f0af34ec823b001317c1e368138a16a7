public class Main {
	
	private String simbolosUnoNueve[] = {"I", "II", "III", "IV", "V", "VI", "VII", "VIII", "IX"};
	private String simbolosDiezNoventa[] = {"X", "XX", "XXX", "XL", "L", "LX", "LXX", "LXXX", "XC"};
	private String simboloCienNovescientos[] = {"C", "CC", "CCC", "CD", "D", "DC", "DCC", "DCCC", "CM"};
	private String simboloMil = "M";
	
	public String convertirNumero(int numero){
		String numeroString = String.valueOf(numero);
		String numeroConvertido = "";
		String unidad = "";
		String decena = "";
		String centena = "";
		if(numero >= 100){
			if(numero < 200){
				centena = "C";
			}else if(numero < 300){
				centena = "CC";
			}else if(numero < 400){
				centena = "CCC";
			}else if(numero < 500){
				centena = "CD";
			}else if(numero < 600){
				centena = "D";
			}else if(numero < 700){
				centena = "DC";
			}else if(numero < 800){
				centena = "DCC";
			}else if(numero < 900){
				centena = "DCCC";
			}else if(numero < 1000){
				centena = "CM";
			}else if (numero == 1000){
				return simboloMil;
			}
		}
		switch(numeroString.substring(numeroString.length()-1)){
			case "1": unidad = "I";
					break;
			case "2": unidad = "II";
					break;
			case "3": unidad = "III";
					break;
			case "4": unidad = "IV";
					break;
			case "5": unidad = "V";
					break;
			case "6": unidad = "VI";
					break;
			case "7": unidad = "VII";
					break;
			case "8": unidad = "VIII";
					break;
			case "9": unidad = "IX";
					break;
			case "0": unidad = "";
					break;
		}
		numeroConvertido = centena + decena + unidad;
		return numeroConvertido;
	}
}